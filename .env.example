# Application Settings
# Generate a secure random key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-a-secure-random-key

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
# SQLite example: sqlite:///./data/socializer.db
# PostgreSQL example: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./data/socializer.db

# Security Settings
BCRYPT_LOG_ROUNDS=12

# API Keys
# OpenAI API Key for AI features (get from https://platform.openai.com/)
OPENAI_API_KEY=your-openai-api-key-here

# Tavily API Key for web search (get from https://tavily.com/)
TAVILY_API_KEY=your-tavily-api-key-here

# CORS Configuration
# Comma-separated list of allowed origins for Cross-Origin requests
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Application Settings (Optional)
DEBUG=False
PROJECT_NAME=Socializer
PROJECT_VERSION=0.1.0

# Email Settings (Optional - for future password reset features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-app-password
# DEFAULT_FROM_EMAIL=noreply@socializer.app

# WebSocket Settings (Optional)
WEBSOCKET_RECONNECT_DELAY=5

# Rate Limiting (Optional - for future implementation)
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_PER_HOUR=1000
